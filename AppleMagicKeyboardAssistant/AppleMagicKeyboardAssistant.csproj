<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <Company>Mikhail Filippov</Company>
    <Copyright>Copyright © Mikhail Filippov 2022</Copyright>
    <Description>Add support Fn-key mappings without Apple drivers for Windows</Description>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="App.ico" />
    <EmbeddedResource Include="App.ico" />
    <None Remove="Exit.png" />
    <EmbeddedResource Include="Exit.png" />
  </ItemGroup>

</Project>